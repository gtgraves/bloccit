<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Please list your ad content in the required fields</p>
    <ul>
      <li>All ads will be reviewed for appropriate content</li>
      <li>No political ads please</li>
      <li>You will receive a bill for the ad via email</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form_group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter ad copy" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
